{
	"manifest_version": 2,

	"name": "YoutubePls",
	"description": "Too lazy to click the skip buttons in Youtube? Too much effort clicking the x on popup ads? Don't worry, this extension will do it for you.",
	"version": "0.2",

	"page_action": {
		"default_icon": {
			"16": "images/logo-16.png",
			"32": "images/logo-32.png",
			"48": "images/logo-48.png",
			"128": "images/logo-128.png"
		},
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"icons": {
		"16": "images/logo-16.png",
		"32": "images/logo-32.png",
		"48": "images/logo-48.png",
		"128": "images/logo-128.png"
	},
	"permissions": ["declarativeContent", "storage", "https://youtube.com/", "tabs"],
	"content_scripts": [{
		"js": ["content.js"],
		"matches": ["https://youtube.com/*", "https://www.youtube.com/*"]
	}]
}